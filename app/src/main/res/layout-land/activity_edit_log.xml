<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Freq"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/LogeditFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Call Sign"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/LogeditCallSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Location"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/LogeditLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Horizontal Layout for Date and Time Pickers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <DatePicker
                    android:id="@+id/logdatePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:calendarViewShown="false"
                    android:spinnersShown="true" />

                <TimePicker
                    android:id="@+id/logtimePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:timePickerMode="spinner" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Receive S-Value"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/LogreceiveSValueSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/send_s_value"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/LogsendSValueSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Save Changes Button -->
    <Button
        android:id="@+id/LogsaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
