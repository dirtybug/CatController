<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Left Section: Text and Input Fields -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/frequencyItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Frequency"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/callSignItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Call Sign"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locationItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Location"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timeItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Time"
            android:textSize="18sp" />

        <!-- Receive S-Value Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Receive S-Value"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/receiveSValueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Send S-Value Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Send S-Value"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/sendSValueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Editable Time and Date Field -->
        <EditText
            android:id="@+id/timeDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Time and Date"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Right Section: Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/SendSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/teal_200"
            android:text="Send Spot"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/openLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/teal_200"
            android:text="Open QRZ"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/setFrequencyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/teal_200"
            android:text="Set Frequency"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/saveLogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:text="Save to Log Book"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
